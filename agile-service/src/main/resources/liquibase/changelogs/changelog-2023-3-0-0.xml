	<changeSet id="Requirement Nr: 10560598 - Create topic table" author="SBE">
		<createTable tableName="topic">
	  		<column name="id" type="BIGINT(20)" autoIncrement="true" incrementBy="1">
				<constraints primaryKey="true" nullable="false"/>
			</column>
